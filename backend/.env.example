# Application
APP_NAME="TrackWise Transit AI Assistant"
APP_VERSION="0.1.0"
DEBUG=True
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql://postgresql:password@localhost:5432/trackwise
DATABASE_ECHO=False

# Redis
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ==================== OAuth Settings ====================
# Google OAuth (from Google Cloud Console)
# Get credentials from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Apple OAuth (from Apple Developer Console)
# Get credentials from: https://developer.apple.com/account/resources/identifiers/list
APPLE_CLIENT_ID=com.yourcompany.trackwise
APPLE_TEAM_ID=YOUR_TEAM_ID
APPLE_KEY_ID=YOUR_KEY_ID
# P8 private key content (keep the newlines)
APPLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----
YOUR_P8_KEY_CONTENT_HERE
-----END PRIVATE KEY-----"

# Frontend URL for OAuth redirects
FRONTEND_URL=http://localhost:3000

# ==================== MTA Subway GTFS-Realtime (NO API KEY NEEDED) ====================
# NYC Subway real-time data
MTA_SUBWAY_GTFS_RT_BASE_URL=https://api-endpoint.mta.info/Dataservice/mtagtfsfeeds/nyct

# Available feed IDs for different line groups:
# - gtfs (all lines combined)
# - gtfs-ace (A, C, E, H, FS)
# - gtfs-bdfm (B, D, F, M)
# - gtfs-g (G)
# - gtfs-jz (J, Z)
# - gtfs-nqrw (N, Q, R, W)
# - gtfs-l (L)
# - gtfs (1, 2, 3, 4, 5, 6, 7, S, SIR - all numbered lines)
MTA_SUBWAY_DEFAULT_FEED=gtfs

# ==================== MTA Bus Time API (OPTIONAL - API KEY REQUIRED) ====================
# Only needed if you want real-time bus data
# Get API key from: http://bustime.mta.info/
MTA_BUS_API_KEY=your_bus_api_key_here_if_needed
MTA_BUS_API_BASE_URL=http://bustime.mta.info/api/siri

# Weather API
OPENWEATHER_API_KEY=YOUR_OPENWEATHER_API_KEY
OPENWEATHER_BASE_URL=https://api.openweathermap.org/data/3.0

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Logging
LOG_LEVEL=INFO
